<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bg_3d_charic"
    android:id="@+id/layout_info">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/move_icon"
        android:id="@+id/img_move_01"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="200dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/move_icon"
        android:id="@+id/img_move_02"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="70dp"
        android:src="@drawable/move_icon"
        android:id="@+id/img_move_03"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="70dp"
        android:layout_gravity="end|bottom"
        android:src="@drawable/move_icon"
        android:id="@+id/img_move_04"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/move_icon"
        android:id="@+id/img_move_05"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="200dp"
        android:paddingRight="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:id="@+id/txt_info_question"
            android:textSize="35sp"
            android:textColor="#000000"/>

        <com.emlook.hospital.Utils.TypewriterPost
            android:id="@+id/txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:layout_gravity="center"
            android:text=""
            android:textSize="40sp"
            android:textColor="#000000"
            />
    </FrameLayout>
</FrameLayout>