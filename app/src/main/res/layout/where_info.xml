<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_building_map">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/move_icon"
        android:id="@+id/img_move_01"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="200dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/move_icon"
        android:id="@+id/img_move_02"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="70dp"
        android:src="@drawable/move_icon"
        android:id="@+id/img_move_03"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="70dp"
        android:layout_gravity="end|bottom"
        android:src="@drawable/move_icon"
        android:id="@+id/img_move_04"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/move_icon"
        android:id="@+id/img_move_05"/>

    <com.emlook.hospital.Utils.TypewriterPost
        android:id="@+id/txt_where_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="40sp"
        android:padding="200dp"/>
    <com.emlook.hospital.Utils.TypewriterPost
        android:id="@+id/txt_where_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="40sp"
        android:padding="200dp"/>
    <com.emlook.hospital.Utils.TypewriterPost
        android:id="@+id/txt_where_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="40sp"
        android:padding="200dp"/>
    <com.emlook.hospital.Utils.TypewriterPost
        android:id="@+id/txt_where_04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="40sp"
        android:padding="200dp"/>
    <com.emlook.hospital.Utils.TypewriterPost
        android:id="@+id/txt_where_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="40sp"
        android:padding="200dp"/>
</FrameLayout>